@model List<PTXYZ_OvertimeApp.Controllers.EmployeeViewModel>

@{
    ViewBag.Title = "Employee Management";
    
    // Razor variable for Position select items
    var positions = new List<string> { "Operator", "Technician", "Leader", "Supervisor", "Manager" };
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Employee Management
        <small>Manage employee data</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Employee</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">List of Employee Data</h3>
                    <div class="box-tools">
                        <button type="button" class="btn btn-primary btn-sm" onclick="openAddModal()">
                            <i class="fa fa-plus"></i> Add New
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">No</th>
                                    <th>NIK</th>
                                    <th>Full Name</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Laptop</th>
                                    <th>Meal</th>
                                    <th>Phone</th>
                                    <th>Join Date</th>
                                    <th style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int startNo = (ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@startNo</td>
                                            <td>@item.NIK</td>
                                            <td>@item.FullName</td>
                                            <td>@item.DepartmentName</td>
                                            <td>
                                                <span class="label label-info">@item.Position</span>
                                            </td>
                                            <td class="text-center">
                                                @if (item.LaptopAllowance)
                                                {
                                                    <i class="fa fa-check text-green"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-red"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.MealAllowance)
                                                {
                                                    <i class="fa fa-check text-green"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-red"></i>
                                                }
                                            </td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@(item.JoinDate.HasValue ? item.JoinDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                                            <td>
                                                <button type="button" class="btn btn-warning btn-xs" onclick="openEditModal(@item.EmployeeId)">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-danger btn-xs" onclick="deleteEmployee(@item.EmployeeId)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        startNo++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="box-footer clearfix">
                    @if (ViewBag.TotalPages > 1)
                    {
                        <ul class="pagination pagination-sm no-margin pull-right">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li><a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">&laquo;</a></li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li><a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">&raquo;</a></li>
                            }
                        </ul>
                    }
                    <div class="pull-left">
                        Page @ViewBag.CurrentPage of @ViewBag.TotalPages
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal for Add/Edit Employee -->
<div class="modal fade" id="employeeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalTitle">Add Employee</h4>
            </div>
            <form id="employeeForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="EmployeeId" name="EmployeeId" value="0" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="NIK">NIK <span class="text-red">*</span></label>
                                <input type="text" class="form-control" id="NIK" name="NIK" required maxlength="20" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="FullName">Full Name <span class="text-red">*</span></label>
                                <input type="text" class="form-control" id="FullName" name="FullName" required maxlength="100" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="DepartmentId">Department <span class="text-red">*</span></label>
                                <select class="form-control" id="DepartmentId" name="DepartmentId" required>
                                    <option value="">-- Select Department --</option>
                                    @* Using ViewBag to populate department options from controller *@
                                    @if (ViewBag.Departments != null)
                                    {
                                        foreach (var dept in ViewBag.Departments)
                                        {
                                            <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Position">Position <span class="text-red">*</span></label>
                                <select class="form-control" id="Position" name="Position" required>
                                    <option value="">-- Select Position --</option>
                                    @* Using Razor variable for position options *@
                                    @foreach (var position in positions)
                                    {
                                        <option value="@position">@position</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Allowances</label>
                                <div class="checkbox">
                                    <label id="laptopAllowanceLabel">
                                        <input type="checkbox" id="LaptopAllowance" name="LaptopAllowance" value="true" />
                                        Laptop Allowance
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label id="mealAllowanceLabel">
                                        <input type="checkbox" id="MealAllowance" name="MealAllowance" value="true" />
                                        Meal Allowance
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Address">Address</label>
                                <textarea class="form-control" id="Address" name="Address" rows="2" maxlength="255"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="PhoneNumber">Phone Number</label>
                                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" maxlength="20" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="JoinDate">Join Date</label>
                                <input type="date" class="form-control" id="JoinDate" name="JoinDate" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var currentEmployeeId = 0;

        // Open Add Modal
        function openAddModal() {
            currentEmployeeId = 0;
            $('#modalTitle').text('Add New Employee');
            $('#employeeForm')[0].reset();
            $('#EmployeeId').val('0');

            // Load departments using AJAX (demonstrating in-view database access)
            loadDepartments();

            // Reset checkboxes
            $('#LaptopAllowance').prop('checked', false);
            $('#MealAllowance').prop('checked', false);

            // Show all allowances initially
            $('#laptopAllowanceLabel').show();
            $('#mealAllowanceLabel').show();

            $('#employeeModal').modal('show');
        }

        // Load departments dynamically (demonstrating in-view database access)
        function loadDepartments(callback) {
            $.ajax({
                url: '@Url.Action("GetDepartments", "Employee")',
                type: 'GET',
                success: function (data) {
                    var select = $('#DepartmentId');
                    select.empty();
                    select.append('<option value="">-- Select Department --</option>');
                    $.each(data, function (index, item) {
                        select.append($('<option></option>').val(item.value).text(item.text));
                    });

                    if (callback) callback();
                },
                error: function () {
                    alert('Error loading departments');
                }
            });
        }

        // Open Edit Modal
        function openEditModal(id) {
            currentEmployeeId = id;
            $('#modalTitle').text('Edit Employee');


            // Load employee data
            $.ajax({
                url: '@Url.Action("Edit", "Employee")/' + id,
                type: 'GET',
                success: function (data) {
                    loadDepartments(function () {
                        $('#DepartmentId').val(data.departmentId);
                    });

                    $('#EmployeeId').val(data.employeeId);
                    $('#NIK').val(data.nik);
                    $('#FullName').val(data.fullName);
                    $('#DepartmentId').val(data.departmentId);
                    $('#Position').val(data.position);
                    $('#LaptopAllowance').prop('checked', data.laptopAllowance);
                    $('#MealAllowance').prop('checked', data.mealAllowance);
                    $('#Address').val(data.address);
                    $('#PhoneNumber').val(data.phoneNumber);
                    $('#JoinDate').val(data.joinDate);


                    // Trigger position change to handle allowance visibility
                    handlePositionChange();

                    $('#employeeModal').modal('show');
                },
                error: function () {
                    alert('Error loading employee data');
                }
            });
        }

        // Handle Position Change - Show/Hide allowances based on position
        $('#Position').change(function () {
            handlePositionChange();
        });

        function handlePositionChange() {
            var position = $('#Position').val();

            // Laptop allowance only for Supervisor and Manager
            if (position === 'Supervisor' || position === 'Manager') {
                $('#laptopAllowanceLabel').show();
            } else {
                $('#laptopAllowanceLabel').hide();
                $('#LaptopAllowance').prop('checked', false);
            }

            // Meal allowance NOT available for Manager
            if (position === 'Manager') {
                $('#mealAllowanceLabel').hide();
                $('#MealAllowance').prop('checked', false);
            } else {
                $('#mealAllowanceLabel').show();
            }
        }

        // Submit Employee Form
        $('#employeeForm').submit(function (e) {
            e.preventDefault();

            var formData = {
                EmployeeId: $('#EmployeeId').val(),
                NIK: $('#NIK').val(),
                FullName: $('#FullName').val(),
                DepartmentId: $('#DepartmentId').val(),
                Position: $('#Position').val(),
                LaptopAllowance: $('#LaptopAllowance').is(':checked'),
                MealAllowance: $('#MealAllowance').is(':checked'),
                Address: $('#Address').val(),
                PhoneNumber: $('#PhoneNumber').val(),
                JoinDate: $('#JoinDate').val() || null
            };

            var url = formData.EmployeeId == '0'
                ? '@Url.Action("Create", "Employee")'
                : '@Url.Action("Edit", "Employee")';

            $.ajax({
                url: url,
                type: 'POST',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                //headers: {
                //    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                //},
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        $('#employeeModal').modal('hide');
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });
        });

        // Delete Employee
        function deleteEmployee(id) {
            if (confirm('Are you sure you want to delete this employee?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Employee")/' + id,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Error deleting employee');
                    }
                });
            }
        }

        // Add CSRF token to all AJAX requests
        $(document).ready(function () {
            $.ajaxSetup({
                beforeSend: function (xhr) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    if (token) {
                        xhr.setRequestHeader('RequestVerificationToken', token);
                    }
                }
            });
        });
    </script>
}


